{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "es2021",
        "module": "CommonJS",
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}